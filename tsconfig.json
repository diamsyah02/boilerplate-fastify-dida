{
  "compilerOptions": {
    "target": "es2020",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "rootDir": "./",
    "outDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "types": ["node"],
    "verbatimModuleSyntax": true,
    "sourceMap": true,
    "declaration": true,
    "allowImportingTsExtensions": false,
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": false
  }
}